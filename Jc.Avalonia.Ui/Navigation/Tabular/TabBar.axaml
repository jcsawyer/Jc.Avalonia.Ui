<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="https://github.com/jcsawyer"
             xmlns:converters="clr-namespace:Jc.Avalonia.Ui.Converters"
             xmlns:tabular="clr-namespace:Jc.Avalonia.Ui.Navigation.Tabular"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jc.Avalonia.Ui.Navigation.Tabular.TabBar">
    <UserControl.Styles>
        <Style Selector="tabular|TabBar">
            <Setter Property="ClipToBounds" Value="False"></Setter>
            <Setter Property="Template">
                <ControlTemplate>
                    <ItemsControl
                        Name="TabNavigation"
                        ItemsSource="{Binding  Items, RelativeSource={RelativeSource TemplatedParent}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid HorizontalAlignment="Stretch" Rows="1" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl
                                    Content="{Binding}"
                                    ContentTemplate="{Binding IsCallToAction, Converter={StaticResource IsCallToActionTabItemToTemplateConverter}}">
                                </ContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="ItemsControl">
            <Setter Property="Background" Value="#313131"></Setter>
            <Setter Property="Foreground" Value="#f5f5f5"></Setter>
            <Setter Property="CornerRadius" Value="15 15 0 0"></Setter>
            <Setter Property="ClipToBounds" Value="False"></Setter>
        </Style>

        <Style Selector="ItemsControl ContentControl">
            <Setter Property="ClipToBounds" Value="False"></Setter>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <DataTemplate x:Key="TabBarItem" DataType="{x:Type tabular:TabItemModel}">
            <Button
                Classes="Tab"
                HorizontalAlignment="Stretch"
                Command="{Binding Command}"
                Classes.Selected="{Binding IsActive}">
                <Border
                    Padding="{Binding BottomPadding, RelativeSource={RelativeSource AncestorType=ui:Shell}}">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                                HorizontalAlignment="Stretch">
                        <PathIcon
                            Data="{Binding Icon, Converter={x:Static converters:IconConverters.IconConverter}}"
                            Width="15" Height="15" Margin="0 5 0 0" Foreground="#f5f5f5">
                        </PathIcon>
                        <TextBlock
                            Text="{Binding Title}"
                            HorizontalAlignment="Center"
                            Margin="0 10 0 0"
                            FontSize="12">
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Button.Styles>
                    <Style Selector="Button.Tab">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="Transparent" />
                    </Style>

                    <Style Selector="Button.Tab:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#3a3a3a" />
                    </Style>

                    <Style Selector="Button.Tab:pressed /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#1a1a1a" />
                    </Style>

                    <Style Selector="Button.Tab:selected /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#505050" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                    
                    <Style Selector="Button.Selected /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#505050" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>

                    <Style Selector="Button.Tab:disabled /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                    </Style>

                    <Style
                        Selector="ContentPresenter:nth-child(1) Button.Tab /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="CornerRadius" Value="15 3 3 3"></Setter>
                    </Style>

                    <Style
                        Selector="ContentPresenter:nth-last-child(1) Button.Tab /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="CornerRadius" Value="3 15 3 3"></Setter>
                    </Style>
                </Button.Styles>
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="CallToActionTabBarItem" DataType="{x:Type tabular:TabItemModel}">
            <Button
                Width="75" Height="75"
                Foreground="#f5f5f5"
                Background="#2EA3F2"
                CornerRadius="20"
                Margin="0,-25,0,0"
                BorderBrush="#313131"
                BorderThickness="10"
                Classes="CtaTab"
                Command="{Binding Command}"
                HorizontalAlignment="Center" VerticalAlignment="Top">
                <PathIcon
                    Data="{Binding Icon, Converter={x:Static converters:IconConverters.IconConverter}}"
                    Width="18" Height="18" Foreground="#f5f5f5">
                </PathIcon>
                <Button.Styles>
                    <Style Selector="Button.CtaTab">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#2EA3F2" />
                        <Setter Property="CornerRadius" Value="20" />
                        <Setter Property="BorderBrush" Value="#313131" />
                        <Setter Property="BorderThickness" Value="10" />
                    </Style>

                    <Style Selector="Button.CtaTab:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#2793db" />
                        <Setter Property="CornerRadius" Value="20" />
                        <Setter Property="BorderBrush" Value="#313131" />
                        <Setter Property="BorderThickness" Value="10" />
                    </Style>

                    <Style Selector="Button.CtaTab:pressed /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#2084c7" />
                        <Setter Property="CornerRadius" Value="20" />
                        <Setter Property="BorderBrush" Value="#313131" />
                        <Setter Property="BorderThickness" Value="10" />
                    </Style>

                    <Style Selector="Button.CtaTab:selected /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                        <Setter Property="Background" Value="#2084c7" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>

                    <Style Selector="Button.CtaTab:disabled /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Foreground" Value="#f5f5f5" />
                    </Style>
                </Button.Styles>
            </Button>
        </DataTemplate>
    </UserControl.Resources>
</UserControl>