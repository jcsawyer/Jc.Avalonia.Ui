<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Jc.Avalonia.Ui"
             xmlns:navigation="clr-namespace:Jc.Avalonia.Ui.Navigation"
             xmlns:dialogs="clr-namespace:Jc.Avalonia.Ui.Dialogs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jc.Avalonia.Ui.Shell">
    <UserControl.Styles>
        <Style Selector="ui|Shell">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Border>
                            <Border.Transitions>
                                <Transitions>
                                    <DoubleTransition Duration="0:0:0.25" Property="Opacity" />
                                </Transitions>
                            </Border.Transitions>
                            <navigation:NavigationRoot>
                                <navigation:NavigationRoot.Transitions>
                                    <Transitions>
                                        <EffectTransition Property="Effect"
                                                          Duration="0:0:0.25" />
                                    </Transitions>
                                </navigation:NavigationRoot.Transitions>
                                <ContentControl Content="{TemplateBinding Content}" />
                            </navigation:NavigationRoot>
                        </Border>
                        <!-- Dialog Host -->
                        <dialogs:DialogHost />
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
    </UserControl.Styles>
</UserControl>