    <ControlTheme x:Key="{x:Type CarouselView}"
                  TargetType="CarouselView">
        <Setter Property="Padding"
                Value="{DynamicResource FlipViewMargin}" />
        <Setter Property="Background"
                Value="{DynamicResource FlipViewBackground}" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Hidden" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Hidden" />
        <Setter Property="ScrollViewer.IsScrollChainingEnabled"
                Value="True" />
        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel>
                    <Grid Background="{TemplateBinding Background}"
                          Name="PART_Grid"
                          DockPanel.Dock="Top"
                          HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <!-- The main FlipView content -->
                        <CarouselViewScrollViewer Name="PART_ScrollViewer"
                                                  VerticalSnapPointsType="MandatorySingle"
                                                  HorizontalSnapPointsType="MandatorySingle"
                                                  ScrollViewer.IsScrollInertiaEnabled="{TemplateBinding (ScrollViewer.IsScrollInertiaEnabled)}"
                                                  TransitionDuration="{TemplateBinding TransitionDuration}"
                                                  VerticalAlignment="Stretch">

                            <CarouselViewScrollViewer.Transitions>
                                <Transitions>
                                    <VectorTransition Property="Offset" Duration="00:00:00.5" />
                                </Transitions>
                            </CarouselViewScrollViewer.Transitions>
                            <ItemsPresenter Name="PART_ItemsPresenter"
                                            ItemsPanel="{TemplateBinding ItemsPanel}" />
                        </CarouselViewScrollViewer>
                    </Grid>

                    <!-- Indicator dots -->
                    <StackPanel x:Name="PART_IndicatorPanel"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                DockPanel.Dock="Bottom"
                                Margin="0,20 0 50" />
                </DockPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>