<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Jc.Avalonia.Ui.Converters">
    <ControlTheme x:Key="{x:Type TabContent}" TargetType="TabContent">
        <Setter Property="Background" Value="{DynamicResource PageBackground}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}">
                    <Grid RowDefinitions="*, Auto">
                        <NavigationOutlet
                            Grid.Row="0"
                            Name="PART_ContentPresenter"
                            Transition="{TemplateBinding PageTransition}"/>
                        <ItemsControl
                            Name="TabNavigation"
                            Grid.Row="1"
                            ItemsSource="{Binding }">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid HorizontalAlignment="Stretch" Rows="1" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Classes="Tab"
                                        Classes.Action="{Binding ., Converter={x:Static converters:TabContentButtonConverter.Converter}}"
                                        HorizontalAlignment="Stretch"
                                        Padding="{Binding BottomPadding, RelativeSource={RelativeSource AncestorType=Shell}}"
                                        Command="{Binding Command}">
                                        <Border>
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                                                        HorizontalAlignment="Stretch">
                                                <PathIcon
                                                    Data="{Binding Icon, Converter={x:Static converters:IconConverters.IconConverter}}"
                                                    Width="15" Height="15" Margin="0 5 0 0">
                                                </PathIcon>
                                                <TextBlock
                                                    Text="{Binding Title}"
                                                    Classes="Title"
                                                    HorizontalAlignment="Center"
                                                    Margin="0 10 0 0"
                                                    FontSize="12">
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                        <Button.Styles>
                                            <Style Selector="Button.Tab">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>

                                            <Style Selector="Button.Tab PathIcon">
                                                <Setter Property="Foreground" Value="#f5f5f5"></Setter>
                                            </Style>

                                            <Style
                                                Selector="Button.Tab:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#3a3a3a" />
                                            </Style>

                                            <Style
                                                Selector="Button.Tab:pressed /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#1a1a1a" />
                                            </Style>

                                            <Style
                                                Selector="Button.Tab:selected /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#505050" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                            </Style>

                                            <Style
                                                Selector="Button.Selected /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#505050" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                            </Style>

                                            <Style
                                                Selector="Button.Tab:disabled /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                            </Style>

                                            <Style
                                                Selector="ContentPresenter:nth-child(1) Button.Tab /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="CornerRadius" Value="15 3 3 3"></Setter>
                                            </Style>

                                            <Style
                                                Selector="ContentPresenter:nth-last-child(1) Button.Tab /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="CornerRadius" Value="3 15 3 3"></Setter>
                                            </Style>

                                            <Style Selector="Button.Action">
                                                <Setter Property="Width" Value="75"></Setter>
                                                <Setter Property="Height" Value="75"></Setter>
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#2EA3F2" />
                                                <Setter Property="CornerRadius" Value="20" />
                                                <Setter Property="BorderBrush" Value="#313131" />
                                                <Setter Property="BorderThickness" Value="10" />
                                                <Setter Property="Margin" Value="0 -25 0 0"></Setter>
                                            </Style>
                                            
                                            <Style Selector="Button.Action PathIcon">
                                                <Setter Property="Width" Value="18"></Setter>
                                                <Setter Property="Height" Value="18"></Setter>
                                            </Style>
                                            
                                            <Style Selector="Button.Action TextBlock.Title">
                                                <Setter Property="IsVisible" Value="False"></Setter>
                                            </Style>

                                            <Style
                                                Selector="Button.Action:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#2793db" />
                                                <Setter Property="CornerRadius" Value="20" />
                                                <Setter Property="BorderBrush" Value="#313131" />
                                                <Setter Property="BorderThickness" Value="10" />
                                            </Style>

                                            <Style
                                                Selector="Button.Action:pressed /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#2084c7" />
                                                <Setter Property="CornerRadius" Value="20" />
                                                <Setter Property="BorderBrush" Value="#313131" />
                                                <Setter Property="BorderThickness" Value="10" />
                                            </Style>

                                            <Style
                                                Selector="Button.Action:selected /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                                <Setter Property="Background" Value="#2084c7" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                            </Style>

                                            <Style
                                                Selector="Button.Action:disabled /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Foreground" Value="#f5f5f5" />
                                            </Style>

                                        </Button.Styles>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.Styles>
                                <Style Selector="ItemsControl">
                                    <Setter Property="Background" Value="#313131"></Setter>
                                    <Setter Property="Foreground" Value="#f5f5f5"></Setter>
                                    <Setter Property="CornerRadius" Value="15 15 0 0"></Setter>
                                    <Setter Property="ClipToBounds" Value="False"></Setter>
                                </Style>
                            </ItemsControl.Styles>
                        </ItemsControl>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>