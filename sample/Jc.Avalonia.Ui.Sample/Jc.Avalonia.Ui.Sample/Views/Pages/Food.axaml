<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jc.Avalonia.Ui.Sample.Views.Pages.Food"
             Background="White">
    <CarouselView>
        <Border Width="300" Height="200" Background="LightGray" CornerRadius="12">
            <TextBlock Text="Pizza" FontSize="24" HorizontalAlignment="Center" />
        </Border>
        <Border Width="300" Height="200" Background="LightGray" CornerRadius="12">
            <TextBlock Text="Burger" FontSize="24" HorizontalAlignment="Center" />
        </Border>
        <Border Width="300" Height="200" Background="LightGray" CornerRadius="12">
            <TextBlock Text="Sushi" FontSize="24" HorizontalAlignment="Center" />
        </Border>
        <Border Width="300" Height="200" Background="LightGray" CornerRadius="12">
            <TextBlock Text="Salad" FontSize="24" HorizontalAlignment="Center" />
        </Border>
        <Border Width="300" Height="200" Background="LightGray" CornerRadius="12">
            <TextBlock Text="Pasta" FontSize="24" HorizontalAlignment="Center" />
        </Border>
    </CarouselView>
</UserControl>